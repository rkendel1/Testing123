{
  "name": "ai-coder",
  "displayName": "AI Coder",
  "description": "AI-powered code completion and refactoring",
  "version": "1.0.0",
  "publisher": "ai-studio",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-coder.refactor",
        "title": "AI Coder: Refactor with AI"
      },
      {
        "command": "ai-coder.chat",
        "title": "AI Coder: Open Chat"
      },
      {
        "command": "ai-coder.toggleAutocomplete",
        "title": "AI Coder: Toggle Autocomplete"
      },
      {
        "command": "ai-coder.selectProvider",
        "title": "AI Coder: Select Provider"
      }
    ],
    "configuration": {
      "title": "AI Coder",
      "properties": {
        "aiCoder.autocompleteEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered autocomplete"
        },
        "aiCoder.routerUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "AI Router server URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node src/extension.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
